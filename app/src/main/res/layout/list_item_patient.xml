<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/patient_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/patientph"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        app:finalHeight="100dp"
        app:finalYPosition="2dp"
        app:layout_behavior="org.cwb.pi4androidapp.activity.AvatarImageBehavior"
        app:startHeight="2dp"
        app:startToolbarPosition="2dp"
        app:startXPosition="2dp"/>

    <TextView
        android:id="@+id/patient_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/patient_image_view"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Nome da Paciente" />

    <TextView
        android:id="@+id/weeksPregnant_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/patient_view"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/patient_image_view"
        android:layout_toRightOf="@id/patient_image_view"
        android:text="MÃªs de gestacao"
        android:textSize="16sp" />

</RelativeLayout>